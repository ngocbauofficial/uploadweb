@model IList<NewsItemModel>
@using Nop.Web.Models.News;
@if (Model.Count > 0)
{
  
    <section>
        <div class="container">
            <div class="new-updates">
                <h1 class="text-uppercase mt-3 mb-3">tin tức liên quan</h1>
            </div>
            <div class="owl-carousel new-sp owl-theme">
               
                @foreach (var item in Model)
                {
                    <div class="item">
                        <a href="@item.SeName">
                            <div class="qwe">
                                <img src="@item.PictureModel.ImageUrl" alt="@item.MetaTitle">
                                <div class="mo-ta-new">
                                    <h3 class="">@item.Title</h3>
                                    <p class="">@item.Short</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    
                 
                }
            </div>
            </div>
    </section>
}