<div id="myModal" style="background:#000000ab;z-index:99999999" class="modal">

    <a href="#">
        <img class="modal-content" src="~/Content/Images/uploaded/POPUP.jpg" alt="" id="img01">
        <span id="closemodel" class="close">&times;</span>
    </a>

</div>

@section scripts{
    <script>
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            responsiveClass: true,
            arrows: false,
            dots: false,
            autoplay: true,
            autoplayTimeout: 5000,
            autoplayHoverPause: true
                responsive: {
                0: {
                    items: 2,
                    nav: true
                },
                600: {
                    items: 3,
                    nav: false
                },
                1000: {
                    items: 4,
                    nav: true,
                    loop: false
                }
            }
        })
    </script>
    <script>
        //modal popup
        $(document).ready(function () {
            if ($.cookie('pop') == null) {
                $('#myModal').css("display", "block");
                $.cookie('pop', '7');
            }
        });
        // Get the <span> element that closes the modal
        var closemodel = document.getElementById("closemodel");
        // When the user clicks on <span> (x), close the modal
        closemodel.onclick = function () {
            $('#myModal').css("display", "none");
        }
    </script>
}
