@model ContactUsModel
@using Nop.Web.Models.Common;
@using Nop.Core
@using Nop.Core.Infrastructure
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.ContactUs").Text);
    //page class
    Html.AppendPageCssClassParts("html-contact-page");
}

@{
    var storeContext = EngineContext.Current.Resolve<IStoreContext>();
    var googlemap = storeContext.CurrentStore.GoogleMap;
}
<div class="contact-map">
   @Html.Raw(googlemap);
</div>
<section>
    @if (Model.SuccessfullySent)
    {
        <div class="result">
            @Model.Result
        </div>
    }
@using (Html.BeginForm())
{ @Html.AntiForgeryToken()
    var validationSummary = Html.ValidationSummary(true);
    if (!MvcHtmlString.IsNullOrEmpty(validationSummary))
    {
        <div class="message-error">@validationSummary</div>
    }
    <div class="container">

        <div class="content-nd">
            <h2>@T("PageTitle.ContactUs")</h2>
            <div class="line-height"></div>
          
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="input-title">
                    <label for="">Họ tên</label>
                </div>
                <div class="import">
                 
                    @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-title">
                    <label for="">Tiêu đề</label>
                </div>
                <div>
     
                    @Html.TextBoxFor(model => model.Subject, new { @class = "form-control"})
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                       
                        <div class="input-title">
                            <label for="">Điện thoại</label>
                        </div>
                        <div>
                           
                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                        </div>
                        <div class="input-title">
                            <label for="">Email</label>
                        </div>
                        <div>
                          @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-title">
                    <label for="">Nội Dung</label>
                </div>
                <div>
                    @Html.TextAreaFor(model => model.Enquiry, new { @class = "input-content", @cols = "20" ,@rows = "5" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="button-click">
                <input type="submit" value="Gửi Liên Hệ">
            </div>
        </div>
    </div>
}
</section>